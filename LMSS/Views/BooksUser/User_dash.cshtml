<!-- -------------------------------------search -->

    <div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="col">
                            <input class="form-control form-control-lg form-control-borderless" type="search" name="searchstring" placeholder="Search topics or keywords">
                        </div>
                        <!--end of col-->
                        <div class="col-auto">
                            <button class="btn btn-lg btn-success" type="submit">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
            <!--end of col-->
        </div>
    </div>
    <br/>
    <br/>


        <div class="container">

            <!-- Card deck -->
            <div class="card-deck row">
            @foreach (var item in Model) {
              <div class="col-xs-12 col-sm-6 col-md-4">
              <!-- Card -->
              <div class="card">

                <!--Card image-->
                <div class="view overlay">
                  <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                  <a href="#!">
                    <div class="mask rgba-white-slight"></div>
                  </a>
                </div>

                <!--Card content-->
                <div class="card-body">
                    
                  <!--Title-->
                  <h4 class="card-title">@item.BookTitle</h4>
                  <!--Text-->
                  <p class="card-text"> @item.Category<br/> @item.Author.AuthorName</p>
                  <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                  <form method="post"  asp-controller="LendRequests" asp-action="Lend" asp-route-BookId="@item.BookId">
                  <input type="submit" class="btn btn-primary" value="Request" />
                  </form>
                </div>

              </div>
              <!-- Card -->
              </div>
              }
            </div>
            </div>